
public class Q40_Minimize_the_Penalty {
	
	public static void minimisePenalty(int [] arr, int n) {
		int i = 0;
		int j = n-1;
		
		while(i <= j) {
			arr[i] = arr[j];
			i++;
			j--;
		}
		for(int k : arr) {
			System.out.print(k + " ");
		}
	}

	public static void main(String[] args) {
		
		int [] arr = {1, 3, 2, 5, 8};
		int n = arr.length;
		
		minimisePenalty(arr, n);
		
	}
}
