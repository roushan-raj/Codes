
public class Q11_Palindrome_Check {
	
	public static int checkString(String str) {
		int i = 0;
		int j = str.length()-1;
		boolean flag = false;
		
		while(i<=j) {
			if(str.charAt(i) != str.charAt(i)) {
				flag = true;
			}
			i++;
			j--;
		}
		
		if(flag) {
			return 0;
		}
		else {
			return 1;
		}
		
	}

	public static void main(String[] args) {
		String str = "abehba";
		
		System.out.println(checkString(str));
	}

}
